<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionMenuTextAppearance">@style/CustomMenuItemText</item>
        <item name="actionMenuTextAppearance">@style/CustomMenuItemText</item>
    </style>

    <style name="TextColor">
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textColorHint">@color/red</item>
        <item name="android:privateImeOptions">nm</item>
    </style>

    <style name="CustomMenuItemText"
        parent = "@style/TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name = "MainMenuButton">
        <item name ="android:layout_width">0dp</item>
        <item name = "android:layout_height">match_parent</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name = "android:layout_margin">10dp</item>
        <item name="android:background">@drawable/button_white_shadowed</item>
    </style>


</resources>
